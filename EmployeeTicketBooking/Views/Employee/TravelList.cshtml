@model List<TicketBookingDemo.Models.TravelRequestDetail>

@{
    ViewBag.Title = "TravelList";
    //Layout = "~/Views/Shared/_Layout.cshtml"; // Your layout file path
}

<h2>Travel Requests List&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<a href="@Url.Action("EmployeeDashBoard", "Employee")"> Home</a></h2>

<table class="table">
    <thead>
        <tr>
            <th>Request ID</th>
            <th>Employee ID</th>
            <th>Employee Manager ID</th>
            <th>Source</th>
            <th>Destination</th>
            <th>Reason for travel</th>
            <th>Departure Date</th>
            <th>Return Date</th>
            <th>Travel Mode</th>
       
        </tr>
    </thead>
    <tbody>
        @foreach (var request in Model)
        {
            <tr>
                <td>@request.RequestId</td>
                <td>@request.EmpId</td>
                <td>@request.EmpMgrId</td>
                <td>@request.TravelSource</td>
                <td>@request.TravelDestination</td>
                <td>@request.Purpose</td>
                <td>@request.DepartureDate.ToShortDateString()</td>
                <td>@request.ReturnDate.ToShortDateString()</td>
                <td>@request.TravelMode</td>
           
            </tr>
        }
    </tbody>
  
</table>


