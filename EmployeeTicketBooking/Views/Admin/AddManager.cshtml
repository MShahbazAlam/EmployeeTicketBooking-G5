@model TicketBookingDemo.Models.Manager
@{
    ViewBag.Title = "AddManager";

}
<h2>Add Manager</h2>
@using (Html.BeginForm("AddManager", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()
<div class="form-container">

    <h2 class="text-center"> ADD MANAGER  </h2>
 
    <br />
    <div class="form-fields">
        <div>
            @Html.LabelFor(model => model.Name)
            @Html.TextBoxFor(model => model.Name, new { @class = "from-control", placeholder = "Manager Name" })
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div>
            @Html.LabelFor(model => model.DOB)
            @Html.TextBoxFor(model => model.DOB, new { @class = "from-control", type = "date", placeholder = "Date Of Birth" })
            @Html.ValidationMessageFor(model => model.DOB)
        </div>

        <div>
            @Html.LabelFor(model => model.Gender)
            @Html.DropDownListFor(model => model.Gender, new List<SelectListItem>
            {
                new SelectListItem { Text = "Male", Value = "Male" },
                new SelectListItem { Text = "Female", Value = "Female" },
                new SelectListItem { Text = "Other", Value = "Other" }
            }, "Select Gender")
            @Html.ValidationMessageFor(model => model.Gender)
        </div>

        <div>
            @Html.LabelFor(model => model.Email)
            @Html.TextBoxFor(model => model.Email, new { @class = "from-control", placeholder = "Email" })
            @Html.ValidationMessageFor(model => model.Email)
        </div>
        <div>
            @Html.LabelFor(model => model.PhoneNumber)
            @Html.TextBoxFor(model => model.PhoneNumber, new { @class = "from-control", placeholder = "Phone Number" })
            @Html.ValidationMessageFor(model => model.PhoneNumber)
        </div>
        <div>
            @Html.LabelFor(model => model.DOJ)
            @Html.TextBoxFor(model => model.DOJ, new { @class = "from-control", type = "date", placeholder = "Date Of Joining" })
            @Html.ValidationMessageFor(model => model.DOJ)
        </div>
        <div>
            @Html.LabelFor(model => model.MDeptName)
            @Html.TextBoxFor(model => model.MDeptName, new { @class = "from-control", placeholder = "Department Name" })
            @Html.ValidationMessageFor(model => model.MDeptName)
        </div>
        <div>
            @Html.LabelFor(model => model.Designation)
            @Html.TextBoxFor(model => model.Designation, new { @class = "from-control", placeholder = "Designation" })
            @Html.ValidationMessageFor(model => model.Designation)
        </div>
        <div>
            @Html.LabelFor(model => model.RepMgrId)
            @Html.TextBoxFor(model => model.RepMgrId, new { @class = "from-control", placeholder = "Reporting Manager" })
            @Html.ValidationMessageFor(model => model.RepMgrId)
        </div>
        <div>
            @Html.LabelFor(model => model.MaritalStatus)
            @Html.DropDownListFor(model => model.MaritalStatus, new List<SelectListItem>
            {
                new SelectListItem { Text = "Married", Value = "Married" },
                new SelectListItem { Text = "Single", Value = "Single" },
                new SelectListItem { Text = "Divorced", Value = "Divorced" }
            }, "Select Marital Status")
            @Html.ValidationMessageFor(model => model.Gender)
        </div>
        <div>
            @Html.LabelFor(model => model.Address)
            @Html.TextBoxFor(model => model.Address, new { @class = "from-control", placeholder = "Address" })
            @Html.ValidationMessageFor(model => model.Address)
        </div>

        <div>
            @Html.LabelFor(model => model.MgrPassword)
            @Html.PasswordFor(model => model.MgrPassword, new { @class = "from-control", placeholder = "Password For Employee" })
            @Html.ValidationMessageFor(model => model.MgrPassword)
        </div>
    </div>
    <br />
    <div class="button-container">
        <input type="submit" value="Create" />
        <input type="reset" value="Reset" />
    </div>
</div>
}

