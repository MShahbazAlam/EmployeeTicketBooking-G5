@model IEnumerable<TicketBookingDemo.Models.TravelAgent>
@{
    ViewBag.Title = "TravelAgentList";
}

<h2>Travel Agents List&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<a href="@Url.Action("AdminDashBoard", "Admin")">Admin Home</a></h2>

<table>
    <thead>
        <tr>
            <th>Agent ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Agency ID</th>
            <th>Password</th>
            <th>Action</th>
            <th>Action</th>
        
        </tr>
    </thead>
    <tbody>
        @foreach (var agent in Model)
        {
        <tr>
            <td>@agent.AgentId</td>
            <td>@agent.Name</td>
            <td>@agent.Email</td>
            <td>@agent.PhoneNumber</td>
            <td>@agent.Agencyid</td>
            <td>@agent.AgentPassword</td>
            <td> <a href="@Url.Action("EditTravelAgent", "Admin", new { id = agent.AgentId })">Edit</a></td>

            <td>
                <form method="post" action="@Url.Action("DeleteTravelAgent", "Admin", new { id = agent.AgentId })">
                    <input type="submit" value="Delete" onclick="return confirm('Are you sure you want to delete this agent?');" />
                </form>
            </td>
      
        </tr>
        }
    </tbody>

</table>



<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f8f9fa;
        margin: 10px;
        padding: 40px;
        text-align: center;
    }

    table {
        width: 90%;
        border-collapse: collapse;
        margin-top: 20px;
        background-color: #d5eeff; 
    }

    thead {
        background-color: #5e87b8;
    }

    th, td {
        padding: 10px;
        text-align: left;
        border: 1px solid #dddddd;
    }


    /* tr:hover {
        background-color: #f5f5f5;
    }*/

    a {
        color: #46a2da;
        text-decoration: none;
        background-color: #dc3545;
        color: #ffffff;
        padding: 6px 12px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 14px;
        transition: background-color 0.3s ease;
    }

        a:hover {
            text-decoration: underline;
            
        }

    form {
        display: inline-block;
        margin: 0;
    }

    input[type="submit"] {
        background-color: #dc3545;
        color: #ffffff;
        padding: 6px 12px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 14px;
        transition: background-color 0.3s ease;
    }


        input[type="submit"]:hover {
            background-color: #c82333;
        }

    thead {
        background-color: #5e87b8;
    }
</style>