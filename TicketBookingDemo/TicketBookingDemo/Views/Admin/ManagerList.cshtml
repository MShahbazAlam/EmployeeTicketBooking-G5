@model List<TicketBookingDemo.Models.Manager>


<h2>Manager List &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<a href="@Url.Action("AdminDashBoard", "Admin")">Admin Home</a></h2>

<table>
    <thead>
        <tr>
            <th>Manager ID</th>
            <th>Name</th>
            <th>DOB</th>
            <th>Gender</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>DOJ</th>
            <th>Dept Name</th>
            <th>Designation</th>
            <th>Reporting Manager ID</th>
            <th>Marital Status</th>
            <th>Address</th>
            <th>Password</th>
            <th>Action</th>
            <th>Action</th>


        </tr>
    </thead>
    <tbody>
        @foreach (var manager in Model)
        {
            <tr>
                <td>@manager.MgrId</td>
                <td>@manager.Name</td>
                <td>@manager.DOB</td>
                <td>@manager.Gender</td>
                <td>@manager.Email</td>
                <td>@manager.PhoneNumber</td>
                <td>@manager.DOJ</td>
                <td>@manager.MDeptName</td>
                <td>@manager.Designation</td>
                <td>@manager.RepMgrId</td>
                <td>@manager.MaritalStatus</td>
                <td>@manager.Address</td>
                <td>@manager.MgrPassword</td>
                <td>
                    @*@Html.ActionLink("EditManager", "EditManager", new { id = item.MgrId })*@
                    <a href="@Url.Action("EditManager", "Admin", new { id = manager.MgrId })">Edit</a>
                </td>
                <td>
                    <form method="post" action="@Url.Action("DeleteManager", "Admin", new { id = manager.MgrId })">
                        <input type="submit" value="Delete" onclick="return confirm('Are you sure you want to delete this Manager?');" />
                    </form>
                </td>

            </tr>
        }
    </tbody>
</table>




<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f8f9fa;
        margin: 10px;
        padding: 10px;
        text-align: center;
    }

    table {
        width: 140%;
        border-collapse: collapse;
        margin-top: 20px;
        background-color: #d5eeff;
    }

    thead {
        background-color: #5e87b8;
    }

    th, td {
        padding: 10px;
        text-align: left;
        border: 1px solid #dddddd;
    }

    /* tr:hover {
        background-color: #f5f5f5;
    }*/

    a {
        color: #46a2da;
        text-decoration: none;
        background-color: #dc3545;
        color: #ffffff;
        padding: 6px 12px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 14px;
        transition: background-color 0.3s ease;
    }

        a:hover {
            text-decoration: underline;

        }

    form {
        display: inline-block;
        margin: 0;
    }

    input[type="submit"] {
        background-color: #dc3545;
        color: #ffffff;
        padding: 6px 12px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 14px;
        transition: background-color 0.3s ease;
    }

